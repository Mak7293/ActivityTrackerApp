<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.StepCounterFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/toolbar_overlay"
        style="@style/Widget.AppCompat.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/toolbar_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/toolbar_text_overlay"
            style="@style/Widget.MaterialComponents.TextView"
            android:fontFamily="@font/semi_bold"
            android:textSize="18sp"
            android:text="Step Counter Fragment"/>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/tv_alert"
        android:gravity="center"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:text="@string/step_counter_alert"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginTop="20dp"
        android:theme="@style/general_text_view"
        app:layout_constraintStart_toEndOf="@id/progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
    <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
        android:id="@+id/progress_bar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:direction="clockwise"
        app:dotColor="@color/green_primary_color"
        app:dotWidth="18dp"
        app:drawDot="true"
        app:progressBackgroundColor="@color/dark_6"
        app:progressBackgroundStrokeWidth="8dp"
        app:progressCap="round"
        app:progressColor="@color/green_primary_color"
        app:textColor="@color/green_primary_color"
        app:progressStrokeWidth="12dp"
        app:enableProgressAnimation="true"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_step_start_stop"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="Start"
        android:background="@drawable/btn_green_drawable"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/progress_bar"
        app:layout_constraintEnd_toEndOf="@id/progress_bar"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_steps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/cv_daily_report"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"
        android:layout_marginHorizontal="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/progress_bar"
        app:layout_constraintTop_toBottomOf="@id/tv_alert"
        app:layout_constraintBottom_toTopOf="@id/fab">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Distance By Steps: 00 m"
                    android:gravity="start"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/regular"
                    android:theme="@style/general_text_view"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_alert"
                    app:layout_constraintBottom_toTopOf="@+id/tv_calories"/>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    app:dividerColor="@color/divider_color"
                    app:layout_constraintTop_toBottomOf="@+id/tv_distance"
                    app:layout_constraintBottom_toTopOf="@id/tv_calories"/>
                <TextView
                    android:id="@+id/tv_calories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calories burned By Steps: 00 Cal"
                    android:gravity="start"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/regular"
                    android:theme="@style/general_text_view"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_distance"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/fab_overlay"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:src="@drawable/ic_run"
        app:tint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>