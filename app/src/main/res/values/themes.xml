<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RunningTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_7</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>

    </style>
    <style name="bottom_navigation_item_text_appearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>
    <style name="ib_save_edit_background" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@drawable/btn_edit_day</item>
    </style>
    <style name="ll_save_reset_background" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@drawable/bottom_sheet_background_day</item>
    </style>
    <style name="statistics_adapter_background" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@drawable/static_recycler_item_row_bg_day</item>
    </style>
    <style name="btn_click_to_see_detail" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">@color/dark_7</item>
        <item name="android:background">@drawable/btn_green_drawable</item>
    </style>
    <style name="cv_daily_report" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@color/dark_6</item>
    </style>
    <style name="icon_image_view" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:tint">@color/dark_0</item>
    </style>
    <style name="general_edit_text" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textCursorDrawable">@drawable/cursor_color_day</item>
        <item name="android:textColorHint">@color/dark_0</item>
    </style>
    <style name="general_text_field" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/green_primary_color</item>
        <item name="hintTextColor">@color/green_primary_color</item>
    </style>
    <style name="general_button" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">@color/dark_7</item>
        <item name="android:backgroundTint">@color/green_primary_color</item>
    </style>
    <style name="general_text_view" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">@color/dark_0</item>
    </style>
    <style name="general_text_view_secondary" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">#636363</item>
    </style>
    <style name="main_background" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@color/dark_7</item>
    </style>
    <style name="bottom_navigation_overlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@color/dark_4</item>
    </style>
    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog.MinWidth">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
    <style name="fab_overlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="android:tint">@android:color/white</item>
    </style>
    <style name="toolbar_overlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/dark_4</item>
    </style>
    <style name="toolbar_with_navigation_btn" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/dark_4</item>
        <item name="navigationIcon">@drawable/ic_back_day</item>
        <item name="colorControlNormal">@color/dark_0</item>
    </style>
    <style name="toolbar_text_overlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">@color/dark_0</item>
    </style>




</resources>